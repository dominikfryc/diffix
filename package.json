{
  "name": "diffix",
  "version": "0.0.0",
  "description": "Web Components UI Library",
  "keywords": [
    "components",
    "web-components",
    "custom-elements",
    "component-library",
    "ui-components",
    "design-system"
  ],
  "homepage": "https://www.diffix.dev",
  "bugs": "https://github.com/dominikfryc/diffix/issues",
  "license": "MIT",
  "author": "Dominik Fryƒç <fryc.dominik@gmail.com> (https://dominikfryc.com/)",
  "funding": "https://ko-fi.com/dominikfryc",
  "packageManager": "pnpm@8.15.1",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dominikfryc/diffix.git"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "files": [
    "dist",
    "src"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./components/*": {
      "types": "./dist/components/*/index.d.ts",
      "import": "./dist/components/*/index.js"
    },
    "./themes/*": {
      "import": "./dist/themes/*"
    }
  },
  "customElements": "./dist/custom-elements.json",
  "scripts": {
    "build": "pnpm build:lib && pnpm build:manifest && pnpm build:types",
    "build:lib": "vite build",
    "build:manifest": "cem analyze --globs 'src/components/**/!(*.stories|*.test).ts' --litelement --outdir dist",
    "build:types": "tsc --emitDeclarationOnly -p tsconfig.build.json",
    "build:storybook": "pnpm build:manifest && storybook build",
    "commit": "git cz",
    "format": "prettier src --write --ignore-unknown",
    "format:check": "prettier src --check --ignore-unknown",
    "generate": "tsx scripts/generate",
    "lint": "eslint src --ext js,ts --max-warnings 0",
    "lint:fix": "eslint src --fix --ext js,ts --max-warnings 0",
    "prepare": "husky install",
    "start": "concurrently -k -r \"storybook dev -p 6006 --no-open\" \"pnpm build:manifest --watch\"",
    "test": "web-test-runner --coverage",
    "test:watch": "web-test-runner --watch",
    "types:check": "tsc --noEmit -p tsconfig.json"
  },
  "dependencies": {
    "@fontsource-variable/inter": "^5.0.16",
    "@open-wc/form-control": "^1.0.0",
    "lit": "^3.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@commitlint/cz-commitlint": "^18.4.4",
    "@custom-elements-manifest/analyzer": "^0.9.0",
    "@open-wc/testing": "^4.0.0",
    "@storybook/addon-a11y": "^7.6.10",
    "@storybook/addon-essentials": "^7.6.10",
    "@storybook/addon-links": "^7.6.10",
    "@storybook/addon-themes": "^7.6.10",
    "@storybook/blocks": "^7.6.10",
    "@storybook/web-components": "^7.6.10",
    "@storybook/web-components-vite": "^7.6.10",
    "@types/js-beautify": "^1.14.3",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@web/dev-server-esbuild": "^1.0.1",
    "@web/rollup-plugin-copy": "^0.5.1",
    "@web/test-runner": "^0.18.0",
    "@web/test-runner-playwright": "^0.11.0",
    "commitizen": "^4.3.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-lit": "^1.11.0",
    "eslint-plugin-lit-a11y": "^4.1.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-storybook": "^0.6.15",
    "eslint-plugin-unused-imports": "^3.0.0",
    "eslint-plugin-wc": "^2.0.4",
    "glob": "^10.3.10",
    "husky": "^8.0.3",
    "js-beautify": "^1.14.11",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "semantic-release": "^23.0.0",
    "storybook": "^7.6.10",
    "ts-lit-plugin": "^2.0.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.12"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:wc/recommended",
      "plugin:lit/recommended",
      "plugin:lit-a11y/recommended",
      "plugin:storybook/recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "ignorePatterns": [
      "!.*"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint",
      "unused-imports",
      "lit-a11y"
    ],
    "reportUnusedDisableDirectives": true,
    "root": true
  },
  "prettier": {
    "arrowParens": "avoid",
    "printWidth": 100,
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --fix --max-warnings 0",
    "*": "prettier --write --ignore-unknown"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "release": {
    "branches": [
      "main",
      {
        "name": "next",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalCommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "perf",
                "section": "Performance Improvements"
              },
              {
                "type": "revert",
                "section": "Reverts"
              },
              {
                "type": "docs",
                "section": "Documentation",
                "hidden": false
              },
              {
                "type": "chore",
                "section": "Miscellaneous Chores",
                "hidden": false
              },
              {
                "type": "refactor",
                "section": "Code Refactoring",
                "hidden": false
              },
              {
                "type": "test",
                "section": "Tests",
                "hidden": false
              },
              {
                "type": "style",
                "section": "Styles",
                "hidden": true
              },
              {
                "type": "build",
                "section": "Build System",
                "hidden": false
              },
              {
                "type": "ci",
                "section": "Continuous Integration",
                "hidden": false
              }
            ]
          }
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  }
}
